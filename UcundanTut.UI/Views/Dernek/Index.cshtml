@using UcundanTut.Entity.Concrete
@model List<Dernek>


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Dernek Kart Tasarımı</title>
    <style>
        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            height: 350px;
            width: 300px;
            margin: 25px;
        }

        .card-image {
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            height: 100px;
            overflow: hidden;
        }

            .card-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .card-content {
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 150px;
        }

        .card-title {
            font-size: 24px;
            margin: 0;
        }

        .card-description {
            font-size: 16px;
            margin: 10px 0;
        }

        .card-date {
            font-size: 14px;
            color: #666;
            margin: 0;
        }

        .body {
            background-color: "00a500";
        }
    </style>
</head>
<body>

    <div class="row justify-content-center">
    @foreach(var item in Model)
    {
        
            <div class="card col-3">
                <div class="card-image">
                    <img src="~/Photos/Tema_Vakfı_logo.png" alt="Dernek Logosu">
                </div>
                <div class="card-content">
                    <h2 class="card-title">@item.DernekAd</h2>
                    <p class="card-description">@item.DernekAciklama</p>

                </div>
            </div>
        
    }
    </div>

</body>
</html>
